<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            <h2>Editar categorias</h2>
        </div>
        <div class="card-body">
            <form class="mt-4" method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" placeholder="Defina o titulo da categoria" value="<%= category.title %> ">
                <input type="hidden" name="id" value="<%= category.id %> ">
                <button class="btn btn-success mt-4">Atualizar</button>
            </form>
        </div>
    </div>
</div>


